<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ResourceName">

    <FrameLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_16dp"
        android:clipToOutline="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Screenshot/Media Section -->
            <FrameLayout
                android:id="@+id/ad_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.gms.ads.nativead.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/ad_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- App Info Section (App Store Style) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- App Icon (Large, Rounded) -->
                <FrameLayout
                    android:id="@+id/icon_container"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:visibility="gone"
                    android:background="@drawable/rounded_20dp"
                    android:clipToOutline="true"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:scaleType="centerCrop" />

                </FrameLayout>

                <!-- App Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <!-- App Name (Headline) -->
                    <TextView
                        android:id="@+id/primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:textColor="#111"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text="Amazing App Name" />

                    <!-- AD Badge + Developer/Store -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:paddingStart="4dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="2dp"
                            android:text="AD"
                            android:textColor="#555"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/secondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:alpha="0.7"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#666"
                            android:textSize="13sp"
                            tools:text="Developer Name" />

                    </LinearLayout>

                    <!-- Rating + Price Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Star Rating -->
                        <RatingBar
                            android:id="@+id/rating_bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:visibility="gone"
                            tools:rating="4.5"
                            tools:visibility="visible" />

                        <!-- Rating Text -->
                        <TextView
                            android:id="@+id/rating_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="#666"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:text="4.5"
                            tools:visibility="visible" />

                        <!-- Separator -->
                        <TextView
                            android:id="@+id/separator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="â€¢"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <!-- Price -->
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#2E7D32"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:text="Free"
                            tools:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Install Button (Right Side) -->
                <FrameLayout
                    android:id="@+id/cta_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/rounded_20dp"
                    android:backgroundTint="#1976D2">

                    <TextView
                        android:id="@+id/cta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:minWidth="80dp"
                        android:paddingStart="18dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Install" />

                </FrameLayout>

            </LinearLayout>

            <!-- Description Section -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.8"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:textColor="#555"
                android:textSize="13sp"
                android:visibility="gone"
                tools:text="Download this amazing app and transform your daily experience with powerful features."
                tools:visibility="visible" />

        </LinearLayout>

    </FrameLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
