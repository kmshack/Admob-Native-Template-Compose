<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6200EE"
        android:elevation="4dp"
        app:title="View-based Ad Templates"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Small Template -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Template"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compact horizontal layout ideal for list items"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <com.soosu.admobnative.NativeAdTemplateView
                android:id="@+id/ad_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adTemplate="small"
                app:adBackgroundColor="#FFFFFF"
                app:adTextColor="#222222" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Icon Small Template -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon Small Template"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compact layout with icon focus"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <com.soosu.admobnative.NativeAdTemplateView
                android:id="@+id/ad_icon_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adTemplate="iconSmall"
                app:adBackgroundColor="#FFFFFF"
                app:adTextColor="#222222" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Headline Template -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headline Template"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultra-compact layout for headers"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <com.soosu.admobnative.NativeAdTemplateView
                android:id="@+id/ad_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adTemplate="headline"
                app:adBackgroundColor="@android:color/transparent"
                app:adTextColor="#222222" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Medium Template -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Template"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full-featured card layout for prominent placements"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <com.soosu.admobnative.NativeAdTemplateView
                android:id="@+id/ad_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adTemplate="medium"
                app:adBackgroundColor="#FFFFFF"
                app:adTextColor="#222222" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Large Template -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Template"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium layout with media, rating, and CTA button"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <com.soosu.admobnative.NativeAdTemplateView
                android:id="@+id/ad_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adTemplate="large"
                app:adBackgroundColor="#FFFFFF"
                app:adTextColor="#222222"
                app:adCtaButtonColor="#1976D2"
                app:adCtaTextColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Content Template -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content Feed Template"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social media style layout"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <com.soosu.admobnative.NativeAdTemplateView
                android:id="@+id/ad_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adTemplate="content"
                app:adBackgroundColor="#FFFFFF"
                app:adTextColor="#222222"
                app:adCtaButtonColor="#1976D2"
                app:adCtaTextColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Full Width Media Template -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Width Media Template"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High-impact layout with large media"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <com.soosu.admobnative.NativeAdTemplateView
                android:id="@+id/ad_full_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adTemplate="fullWidthMedia"
                app:adCtaButtonColor="@android:color/white"
                app:adCtaTextColor="#1976D2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- App Install Template -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Install Template"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Store style layout for app promotions"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <com.soosu.admobnative.NativeAdTemplateView
                android:id="@+id/ad_app_install"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adTemplate="appInstall"
                app:adBackgroundColor="#FFFFFF"
                app:adTextColor="#222222"
                app:adCtaButtonColor="#4CAF50"
                app:adCtaTextColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
